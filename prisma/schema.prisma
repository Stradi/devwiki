generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url = "file:./dev.db"
}

model Wiki {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  
  name String
  slug String @unique

  description String?
  pages Page[]

  @@map("wikis")
}

model Page {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  wiki Wiki @relation(fields: [wikiSlug], references: [slug])
  wikiSlug String

  name String
  slug String
  source String?

  @@unique([wikiSlug, slug], name: "pageIdentifier")
  @@map("pages")
}